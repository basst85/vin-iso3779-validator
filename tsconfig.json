{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "declarationMap": false,
    "stripInternal": true,
    "outDir": "dist",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true
  },
  "include": ["src"]
}